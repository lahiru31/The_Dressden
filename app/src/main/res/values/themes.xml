<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.AdvancedAndroidApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        
        <!-- Custom attributes -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Text appearances -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.AdvancedAndroidApp.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.AdvancedAndroidApp.Headline2</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.AdvancedAndroidApp.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.AdvancedAndroidApp.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.AdvancedAndroidApp.Subtitle1</item>
        <item name="textAppearanceBody1">@style/TextAppearance.AdvancedAndroidApp.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.AdvancedAndroidApp.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.AdvancedAndroidApp.Caption</item>
        
        <!-- Shape appearances -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.AdvancedAndroidApp.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.AdvancedAndroidApp.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.AdvancedAndroidApp.LargeComponent</item>
        
        <!-- Custom attributes -->
        <item name="dividerColor">@color/gray_300</item>
        <item name="colorControlHighlight">@color/gray_400</item>
        <item name="colorOnSurface">@color/text_primary</item>
    </style>

    <!-- Text Appearances -->
    <style name="TextAppearance.AdvancedAndroidApp.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.AdvancedAndroidApp.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.AdvancedAndroidApp.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.AdvancedAndroidApp.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.AdvancedAndroidApp.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.AdvancedAndroidApp.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.AdvancedAndroidApp.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.AdvancedAndroidApp.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Shape Appearances -->
    <style name="ShapeAppearance.AdvancedAndroidApp.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_small</item>
    </style>

    <style name="ShapeAppearance.AdvancedAndroidApp.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_medium</item>
    </style>

    <style name="ShapeAppearance.AdvancedAndroidApp.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_large</item>
    </style>

    <!-- Custom Widget Styles -->
    <style name="Widget.AdvancedAndroidApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">@dimen/spacing_large</item>
        <item name="android:paddingEnd">@dimen/spacing_large</item>
        <item name="android:minHeight">@dimen/button_height</item>
    </style>

    <style name="Widget.AdvancedAndroidApp.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">@dimen/spacing_large</item>
        <item name="android:paddingEnd">@dimen/spacing_large</item>
        <item name="android:minHeight">@dimen/button_height</item>
    </style>
</resources>
