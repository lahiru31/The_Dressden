<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom Text Input Layout Style -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_medium</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_medium</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_medium</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_medium</item>
    </style>

    <!-- Custom Card Style -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/shadow_small</item>
        <item name="cardCornerRadius">@dimen/radius_medium</item>
        <item name="contentPadding">@dimen/spacing_large</item>
    </style>

    <!-- Custom Bottom Sheet Style -->
    <style name="Widget.App.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="behavior_peekHeight">0dp</item>
        <item name="behavior_hideable">true</item>
        <item name="behavior_skipCollapsed">true</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
        <item name="elevation">@dimen/shadow_large</item>
    </style>

    <!-- Shape Appearances -->
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_small</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_medium</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_xlarge</item>
    </style>
</resources>
